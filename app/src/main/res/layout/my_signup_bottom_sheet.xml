<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="10dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="56dp"
    android:orientation="vertical"
    android:id="@+id/my_signup_bottom_sheet"
    android:background="@drawable/bg_image_tem"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="-50dp"
        android:layout_gravity="center"
        android:src="@drawable/hand_img"
        android:gravity="center"
        android:text="About"
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:textSize="@dimen/dimen15dp"
        android:text="@string/welcome_to" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@color/light_red"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen17dp"
        android:text="@string/craete_account" />



</LinearLayout>