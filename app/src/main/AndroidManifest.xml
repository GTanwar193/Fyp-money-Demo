<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fypmoneydemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/fyp_app_icon_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity
            android:name=".phone_no_verification.verification_success.VerificationSuccessActivity"
            android:screenOrientation="portrait"></activity>


        <activity
            android:name=".phone_no_verification.receiveOtp.ReceiveOtpActivity"
            android:screenOrientation="portrait" />


        <activity
            android:name=".phone_no_verification.sendOtp.SendOtpActivity"
            android:screenOrientation="portrait" />


        <activity
            android:name=".signup.SignUpActivity"
            android:screenOrientation="portrait" />


        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


    </application>

</manifest>